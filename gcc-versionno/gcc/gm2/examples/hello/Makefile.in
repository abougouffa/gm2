srcdir = @srcdir@
gm2dir = $(srcdir)/../..

include ../../config-make
LIBSTDCXX=../../../../$(TARGET_SUBDIR)/libstdc++-v3/src/.libs

SRC_PATH_PIM=../../../../$(TARGET_SUBDIR)/libgm2/libpim/.libs:$(gm2dir)/gm2-libs
OBJ_PATH_PIM=.:../../../../$(TARGET_SUBDIR)/libgm2/libpim/.libs

XGM2=../../../xgm2 -B../../.. -B../../../stage1/gm2
GM2FLAGS=-O3

all: force
	@echo "you need to use 'make pre-install' to build the examples using the locally built compiler"
	@echo "or you can use 'make post-install' to build the examples after installing the compiler"

pre-install: clean
	$(XGM2) -I$(SRC_PATH_PIM) -g $(srcdir)/hello.mod -L$(LIBSTDCXX)
	size a$(EXE)
	$(XGM2) -g -I$(OBJ_PATH_PIM) -ffunction-sections -fdata-sections $(srcdir)/hello.mod -Wl,--gc-sections -L$(LIBSTDCXX)
	size a$(EXE)

post-install: clean
	gm2 -g -I. $(srcdir)/hello.mod
	size a$(EXE)
	gm2    -g -I. -ffunction-sections -fdata-sections $(srcdir)/hello.mod -Wl,--gc-sections
	size a$(EXE)

pre-install-whole: clean
	$(XGM2) -fm2-whole-program -fextended-opaque $(GM2FLAGS) -o hello-m2-whole-program  -g -I$(SRC_PATH_PIM) $(srcdir)/hello.mod -L$(LIBSTDCXX)

clean:
	$(RM) *.o a$(EXE) *.cpp *.obj

force:

