
SUFFIXES = .c .mod .def .o .obj .lo .a

ACLOCAL_AMFLAGS = -I . -I .. -I ../config

VPATH = . @srcdir@ @srcdir@/../../gcc/gm2/gm2-libs

# Multilib support.
MAKEOVERRIDES=


# Work around what appears to be a GNU make bug handling MAKEFLAGS
# values defined in terms of make variables, as is the case for CC and
# friends when we are called from the top level Makefile.
AM_MAKEFLAGS = \
        "GCC_DIR=$(GCC_DIR)" \
        "GM2_SRC=$(GM2_SRC)" \
	"AR_FLAGS=$(AR_FLAGS)" \
	"CC_FOR_BUILD=$(CC_FOR_BUILD)" \
	"CC_FOR_TARGET=$(CC_FOR_TARGET)" \
	"GM2_FOR_TARGET=$(GM2_FOR_TARGET)" \
	"CFLAGS=$(CFLAGS)" \
	"CXXFLAGS=$(CXXFLAGS)" \
	"CFLAGS_FOR_BUILD=$(CFLAGS_FOR_BUILD)" \
	"CFLAGS_FOR_TARGET=$(CFLAGS_FOR_TARGET)" \
	"INSTALL=$(INSTALL)" \
	"INSTALL_DATA=$(INSTALL_DATA)" \
	"INSTALL_PROGRAM=$(INSTALL_PROGRAM)" \
	"INSTALL_SCRIPT=$(INSTALL_SCRIPT)" \
	"LDFLAGS=$(LDFLAGS)" \
	"LIBCFLAGS=$(LIBCFLAGS)" \
	"LIBCFLAGS_FOR_TARGET=$(LIBCFLAGS_FOR_TARGET)" \
	"MAKE=$(MAKE)" \
	"MAKEINFO=$(MAKEINFO) $(MAKEINFOFLAGS)" \
	"SHELL=$(SHELL)" \
	"RUNTESTFLAGS=$(RUNTESTFLAGS)" \
	"exec_prefix=$(exec_prefix)" \
	"infodir=$(infodir)" \
	"libdir=$(libdir)" \
	"includedir=$(includedir)" \
	"prefix=$(prefix)" \
	"tooldir=$(tooldir)" \
	"gxx_include_dir=$(gxx_include_dir)" \
	"AR=$(AR)" \
	"AS=$(AS)" \
	"LD=$(LD)" \
	"RANLIB=$(RANLIB)" \
	"NM=$(NM)" \
	"NM_FOR_BUILD=$(NM_FOR_BUILD)" \
	"NM_FOR_TARGET=$(NM_FOR_TARGET)" \
	"DESTDIR=$(DESTDIR)" \
	"WERROR=$(WERROR)"

# Subdir rules rely on $(FLAGS_TO_PASS)
FLAGS_TO_PASS = $(AM_MAKEFLAGS)


# if BUILD_PIMLIB
libgm2_LIBRARIES = libgm2.a
libgm2_a_SOURCES = ASCII.mod IO.mod \
                   Args.mod M2RTS.mod \
                   Assertion.mod NumberIO.mod \
                   Break.mod SYSTEM.mod \
                   CmdArgs.mod Scan.mod \
                   StrCase.mod FIO.mod \
                   StrIO.mod StrLib.mod \
                   TimeString.mod Environment.mod \
                   FpuIO.mod Debug.mod \
                   SysStorage.mod Storage.mod \
                   StdIO.mod SEnvironment.mod \
                   DynamicStrings.mod SFIO.mod \
                   SArgs.mod PushBackInput.mod \
                   StringConvert.mod FormatStrings.mod \
                   Builtins.mod MathLib0.mod \
                   M2EXCEPTION.mod RTExceptions.mod \
                   SMathLib0.mod RTint.mod \
                   COROUTINES.mod Indexing.mod \
                   LMathLib0.mod LegacyReal.mod \
                   MemUtils.mod \
                   wrapc.c UnixArgs.c \
                   Selective.c sckt.c \
                   errno.c dtoa.c \
                   ldtoa.c termios.c \
                   SysExceptions.c target.c \
                   wrapc.c

libgm2dir = libpim
libgm2_a_DEPENDENCIES = SYSTEM.def
libgm2_a_CFLAGS = -I. -I$(GM2_SRC)/gm2-libs -I$(GM2_SRC)/gm2-libs-iso -DBUILD_GM2_LIBS -I@srcdir@/../
libgm2_a_M2FLAGS = -I. -I$(GM2_SRC)/gm2-libs -I$(GM2_SRC)/gm2-libs-iso
BUILT_SOURCES = SYSTEM.def
CLEANFILES = SYSTEM.def

SYSTEM.def: Makefile
	bash $(GM2_SRC)/tools-src/makeSystem -fpim \
             $(GM2_SRC)/gm2-libs/SYSTEM.def \
             $(GM2_SRC)/gm2-libs/SYSTEM.mod \
             -I$(GM2_SRC)/gm2-libs \
             "$(GM2_FOR_TARGET)" $@

.mod.o:
	$(GM2_FOR_TARGET) -c $(CFLAGS_FOR_TARGET) $(LIBCFLAGS) $(libgm2_a_M2FLAGS) $<

# endif

# Multilib support.  Automake should provide these on its own.
all-recursive: all-multi
install-recursive: install-multi
mostlyclean-recursive: mostlyclean-multi
clean-recursive: clean-multi
distclean-recursive: distclean-multi
maintainer-clean-recursive: maintainer-clean-multi
