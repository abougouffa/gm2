SHELL=/bin/bash

srcdir = @srcdir@
gm2dir = $(srcdir)/../../..

SRC_PATH_PIM=$(srcdir):../../../gm2-libs:$(gm2dir)/gm2-libs:$(gm2dir)/gm2-libs-iso
OBJ_PATH_PIM=.:../../../gm2-libs/SO:../../../gm2-libs-pim/SO:../../../gm2-libs-iso/SO

XGM2=../../../../xgm2 -B../../../.. -B../../../../stage1/gm2
XGPP=../../../../g++
XGCC=../../../../g++

PYTHON_VERSION=2.5

all: force
	@echo "you need to use 'make pre-install' to build the examples using the locally built compiler"
	@echo "or you can use 'make post-install' to build the examples after installing the compiler"

pre-install: clean
	$(XGM2) -fshared -fswig -I$(SRC_PATH_PIM) -c -fPIC -g -fswig $(srcdir)/tiny.mod
	swig -c++ -python tiny.i
	$(XGCC) -c -fPIC tiny_wrap.cxx -I/usr/include/python$(PYTHON_VERSION)
	$(XGM2) -fshared -c -fPIC -g -fmakelist -I$(SRC_PATH_PIM) $(srcdir)/tiny.mod
	$(XGM2) -fuselist -fobject-path=$(OBJ_PATH_PIM) -fPIC -g -shared -fshared -I$(srcdir) $(srcdir)/tiny.mod tiny_wrap.o -o _tiny.so
	PYTHONPATH=.:$(srcdir) python $(srcdir)/testtiny.py

post-install: clean
	gm2 -fshared -fswig -I$(srcdir) -c -fPIC -g -fswig $(srcdir)/tiny.mod
	swig -c++ -python tiny.i
	gcc -c -fPIC tiny_wrap.cxx -I/usr/include/python$(PYTHON_VERSION)
	gm2 -fshared -c -fPIC -g -fmakelist -I$(srcdir) $(srcdir)/tiny.mod
	gm2 -fuselist -fobject-path=. -fPIC -g -shared -fshared -I$(srcdir) $(srcdir)/tiny.mod tiny_wrap.o -o _tiny.so
	PYTHONPATH=.:$(srcdir) python $(srcdir)/testtiny.py

clean: force
	$(RM) -f *.o *.so a.out *.pyc *~ *_wrap* tiny.py *.i *.lst *_m2.cpp

force:
