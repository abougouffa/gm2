    open = 18 ;
    pause = 19 ;
    pipe = 20 ;
    read = 21 ;
    setitimer = 22 ;
    setgid = 23 ;
    setuid = 24 ;
    stat = 25 ;
    times = 26 ;
    unlink = 27 ;
    wait = 28 ;
    write = 29 ;

END Sys.
