	if [ "$(host_canonical)" = "$(target)" ] ; then \
           $(MAKE) stage1_build stage2/gm2/$@ ; \
           cp stage2/gm2/$@ $@ ; \
        else \
           $(MAKE) stage1_build stage1/gm2/$@ ; \
           cp stage1/gm2/$@ $@ ; \
        fi

